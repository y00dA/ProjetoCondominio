<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SindProjetoUI.Login">
    <ContentPage.Content>
        
        <Frame>
            <StackLayout VerticalOptions="Center">
            
                <Label Text="Login" HorizontalOptions="Center" VerticalOptions="Start" FontSize="Medium" />
                <Entry x:Name="UserEntry" Placeholder="Usuario"/>
                <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True"/>
                <Button x:Name="ButtonEntry" Text="Entrar" Clicked="ButtonEntry_ClickedAsync"/>

            </StackLayout>
        </Frame>
        
    </ContentPage.Content>
</ContentPage>